{
  "name": "baukasten",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "npm run lint:astro && npm run lint:eslint",
    "lint:astro": "astro check",
    "lint:eslint": "eslint .",
    "lint:fix": "npm run lint:eslint -- --fix && npm run format",
    "format": "prettier --write . --ignore-path .gitignore",
    "format:check": "prettier --check . --ignore-path .gitignore",
    "test": "vitest",
    "test:sync": "node plugins/astro-kirby-sync/test-incremental-sync.js",
    "clean": "rimraf public/content",
    "clean:images": "rimraf public/media",
    "clean:fonts": "rimraf public/fonts",
    "clean:all": "npm run clean && npm run clean:images && npm run clean:fonts",
    "sync:images": "NODE_ENV=production node -e \"import('./plugins/netlify-hybrid-images/src/setup.js').then(m => m.default({ logger: { info: console.log, warn: console.warn, error: console.error }, options: { enabled: true, publicDir: 'public', mediaDir: 'media', concurrency: 2, rewriteContent: true, maxRetries: 3, retryDelay: 1000, timeout: 30000 } }))\"",
    "clean-build": "npm run clean:all && npm run build",
    "clean-dev": "npm run clean:all && npm run dev"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/netlify": "^6.5.13",
    "@astrojs/tailwind": "^6.0.2",
    "@iarna/toml": "^2.2.5",
    "astro": "^5.14.5",
    "astro-cloudinary": "^1.3.0",
    "astro-icon": "^1.1.0",
    "dotenv": "^16.3.1",
    "medium-zoom": "^1.1.0",
    "photoswipe": "^5.4.4",
    "swiper": "^9.2.3",
    "tailwindcss": "^3.2.4",
    "tailwindcss-delicious-hamburgers": "^1.0.3",
    "typescript": "^5.9.2",
    "vanilla-cookieconsent": "^3.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@playform/compress": "0.1.7",
    "@types/eslint-plugin-jsx-a11y": "^6.10.0",
    "@typescript-eslint/eslint-plugin": "8.44.1",
    "@typescript-eslint/parser": "8.44.1",
    "astro-eslint-parser": "^1.2.2",
    "eslint": "9.36.0",
    "eslint-plugin-astro": "1.3.1",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "node-fetch": "^3.3.2",
    "prettier": "3.6.2",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-tailwindcss": "^0.2.2",
    "rimraf": "^6.0.1",
    "vitest": "^3.0.8"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.6.1"
  }
}
